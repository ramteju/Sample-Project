        $.jgrid.defaults.responsive = true;
        $.jgrid.defaults.styleUI = 'Bootstrap';

        function errorMessage(response) {
            return '<i class="icon-remove" style="padding-left:10px"></i> ' + response.responseText;
        }

        function datePicker(element) {
            $(element).datepicker({
                dateFormat: 'dd-mm-yy'
            });
        }

        //*************************************************************Role
